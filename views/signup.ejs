<!DOCTYPE html>
<html>

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Montserrat:wght@200;400;600&display=swap"
        rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.css" media="screen,projection" />
    <link type="text/css" rel="stylesheet" href="/css/musicup.css" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col xl12 s12 m12 l12 centeredText" style="margin-top: 100px;">
                <h1><i class="small material-icons">play_circle_outline</i> Musicup</h1>
            </div>
        </div>
        <div class="row">
            <div class="col xl12 s12 m12 l12 centeredText input-field">
                <h3>Create New Account</h3>
            </div>
        </div>

        <form action="/account/signupAction" method="POST" id="register_form">
            <div class="row">
                <div class="col xl6 s12 m12 l6 centeredText input-field">
                    <input id="first_name" name="first_name" type="text">
                    <label for="first_name">First Name</label>
                </div>
                <div class="col xl6 s12 m12 l6 centeredText input-field">
                    <input id="last_name" name="last_name" type="text">
                    <label for="last_name">Last Name</label>
                </div>

                <div class="col xl6 s12 m12 l6 centeredText input-field">
                    <input id="email" name="email" type="email">
                    <label for="email">Email</label>
                </div>
                <div class="col xl6 s12 m12 l6 centeredText input-field">
                    <input id="password" name="password" type="password">
                    <label for="password">Password</label>
                </div>
            </div>
        </form>


        <div class="row">
            <div class="col xl3 s12 m3 l3"></div>
            <div class="col xl6 s12 m6 l6 centeredText">
                <button form="register_form" class="btn waves-effect waves-light btn-large cyan" type="submit">Signup
                    <i class="material-icons right">send</i>
                </button>
            </div>
            <div class="col xl3 s12 m3 l3"></div>
        </div>


        <div class="row">
            <div class="col xl3 s12 m3 l3"></div>
            <div class="col xl6 s12 m6 l6 centeredText">
                <a href="/account/login">Back To Login</a>
            </div>
            <div class="col xl3 s12 m3 l3"></div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="/js/materialize.min.js"></script>
</body>

</html>